{
  "name": "line-company-bot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/line-bot",
    "packages/admin-web"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w packages/shared",
    "build:bot": "npm run build -w packages/line-bot",
    "build:admin": "npm run build -w packages/admin-web",
    "dev:bot": "npm run dev -w packages/line-bot",
    "dev:admin": "npm run dev -w packages/admin-web"
  },
  "devDependencies": {
    "dotenv": "^17.3.1",
    "pg": "^8.18.0"
  }
}
