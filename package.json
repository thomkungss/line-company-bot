{
  "name": "line-company-bot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/line-bot",
    "packages/admin-web"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:bot && npm run build:admin",
    "build:shared": "npm run build --prefix packages/shared",
    "build:bot": "npm run build --prefix packages/line-bot",
    "build:admin": "npm run build --prefix packages/admin-web",
    "dev:bot": "npm run dev --prefix packages/line-bot",
    "dev:admin": "npm run dev --prefix packages/admin-web",
    "test": "jest --verbose"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.3.1",
    "jest": "^30.2.0",
    "pg": "^8.18.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6"
  }
}
